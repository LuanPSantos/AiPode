<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.codeplays.trainee.aipode.infra.view.MediaPlayerView" >
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label styleClass="text-primary" fx:id="display"/>
    <Button styleClass="btn-default" text="Play/Pause" onAction="#onPlayPause"/>
    <Button text="Next" onAction="#onNext"/>
    <Button text="Previous" onAction="#onPrevious"/>
</VBox>
